# -*- python -*-
############################
## load the config

## use the environment set in the top-level
## SConstruct file

Import( '*' )
myenv=env.Copy()
Import("soundLibs")

rgseqSources = Split("""
mmappedcontrolblock.cpp
mmappedsegment.cpp
rosegardensequencer.cpp
main.cpp
sequencermapper.cpp
rosegardensequenceriface.skel
""")

rgseq = KDEprogram('rosegardensequencer', rgseqSources, myenv)

KDEaddpaths( ['../base', '../sound', '../gui', '../', './'], myenv)
KDEaddlibs(['kdeui', 'kdecore', 'base', 'RosegardenSound', 'RosegardenSequencer'], myenv)

myenv['LIBPATH'].append('../base')
myenv['LIBPATH'].append('../sound')

for dep in soundLibs:
    Depends(rgseq, dep)


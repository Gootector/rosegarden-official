# -*- python -*-
############################
## load the config

## use the environment set in the top-level
## SConstruct file

Import('env')
myenv=env.Copy()
Import("soundLibs")

rgseqSources = Split("""
mmappedcontrolblock.cpp
mmappedsegment.cpp
rosegardensequencer.cpp
main.cpp
sequencermapper.cpp
rosegardensequenceriface.skel
""")

rgseq = myenv.KDEprogram('rosegardensequencer', rgseqSources)

myenv.KDEaddpaths_includes( ['../base', '../sound', '../gui', '../', './'])
myenv.KDEaddlibs(['RosegardenSequencer', 'RosegardenSound', 'base', 'kdeui', 'kdecore'])

#myenv.KDEaddpaths_libs( ['../base', '../sound'] )
myenv['LIBPATH'].insert(0, '../base')
myenv['LIBPATH'].insert(0, '../sound')

for dep in soundLibs:
    Depends(rgseq, dep)


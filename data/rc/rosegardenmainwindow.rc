  <text>Transport Toolbar</text>
  <Action name="rewindtobeginning" text="Rewind to Beginning" icon="transport-rewind-end" shortcut="Home" shortcut-context="application" />
  <Action name="rewind" />
  <Action name="play" />
  <Action name="fast_forward" />

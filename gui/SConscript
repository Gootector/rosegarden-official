# KDE libs
myenv['LIBS'].append('kdeui')
myenv['LIBS'].append('kdecore')
myenv['LIBS'].append('kdeprint')
myenv['LIBS'].append('kio')

myenv['LIBS'].append('Xft')

# RG libs
myenv['LIBS'].append('base')
myenv['LIBS'].append('RosegardenSound')
myenv['LIBS'].append('RosegardenSequencer')

myenv['LIBPATH'].append('../base')
myenv['LIBPATH'].append('../sound')
myenv['LIBPATH'].append('/usr/X11R6/lib')

rg = myenv.Program('rosegarden', rgSources,
              CPPPATH = ['/usr/X11R6/include/X11/Xft',
                         '/usr/include/freetype2',
                         '../base', '../sound', '..', '.'],
               )

for dep in soundLibs:
    Depends(rg, dep)


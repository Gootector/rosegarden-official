#! /usr/bin/env python

# -*- python -*-
############################
## load the config

## use the myenv.ronment set in the top-level
## SConstruct file

Import('env')

tobj=env.kobject('program', env)
tobj.target='test_fingering'
tobj.source='test_fingering.cpp'
tobj.includes='../../base ../../ ../../..'
tobj.libs='guitar kdeui base'
tobj.libpaths='../../base .'
tobj.execute()


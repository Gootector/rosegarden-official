note.cpp
symbols.cpp
"""

obj=env.kobject('staticlib', env)
obj.target='libguitar'
obj.source=guitar_src
obj.libpaths='../../base .'
obj.includes='../../base ../../ ../../..'
obj.libs='kdeui ../../base/libbase.a'
